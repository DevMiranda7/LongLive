<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F8"
    android:fitsSystemWindows="true">

    <!-- Faixa superior -->
    <View
        android:id="@+id/viewColorTreinos"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="#45474B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/id_voltarInicio"
        android:layout_width="60dp"
        android:layout_height="47dp"
        android:background="@null"
        android:src="@drawable/botao_voltar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewColorTreinos" />

    <!-- Título -->
    <TextView
        android:id="@+id/id_treinosText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Treinos"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/viewColorTreinos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Botões -->
    <Button
        android:id="@+id/buttonPeitoral"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:text="Peitoral"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="236dp"
        android:layout_marginStart="81dp" />

    <Button
        android:id="@+id/buttonCostas"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:text="Costas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="236dp"
        android:layout_marginStart="223dp" />

    <Button
        android:id="@+id/buttonPerna"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:text="Perna"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="329dp"
        android:layout_marginStart="83dp" />

    <Button
        android:id="@+id/buttonBraco"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:text="Braço"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="427dp"
        android:layout_marginStart="223dp" />

    <Button
        android:id="@+id/buttonAbs"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:text="Abdómen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="427dp"
        android:layout_marginStart="83dp" />

    <Button
        android:id="@+id/buttonOmbro"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:text="Ombro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="329dp"
        android:layout_marginStart="223dp" />

    <!-- Textos dos dias -->
    <TextView
        android:id="@+id/TextSabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sábado"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="398dp"
        android:layout_marginStart="241dp" />

    <TextView
        android:id="@+id/TextSexta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexta-feira"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="398dp"
        android:layout_marginStart="87dp" />

    <TextView
        android:id="@+id/textQuinta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quinta-feira"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="295dp"
        android:layout_marginStart="223dp" />

    <TextView
        android:id="@+id/textSegunda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segunda-feira"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="199dp"
        android:layout_marginStart="68dp" />

    <TextView
        android:id="@+id/textTerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terça-feira"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="199dp"
        android:layout_marginStart="232dp" />

    <TextView
        android:id="@+id/textQuarta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quarta-feira"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="295dp"
        android:layout_marginStart="85dp" />

    <!-- View decorativa -->
    <View
        android:id="@+id/view2"
        android:layout_width="367dp"
        android:layout_height="460dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="121dp"
        android:layout_marginStart="28dp" />

    <!-- Imagens -->
    <ImageView
        android:id="@+id/IconMen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/levantamentode_peso"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="501dp"
        android:layout_marginStart="173dp" />

    <ImageView
        android:id="@+id/IconMenAbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/exercicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="436dp"
        android:layout_marginStart="36dp" />

    <ImageView
        android:id="@+id/IconMenPerna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/levantamento_depeso"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="337dp"
        android:layout_marginStart="36dp" />

    <ImageView
        android:id="@+id/IconMenBraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/musculacao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="436dp"
        android:layout_marginStart="344dp" />

    <ImageView
        android:id="@+id/IconMenPeito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/levantamentopeito"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="243dp"
        android:layout_marginStart="36dp" />

    <ImageView
        android:id="@+id/IconMenOmbro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pesohomem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="337dp"
        android:layout_marginStart="344dp" />

    <ImageView
        android:id="@+id/IconMenCostas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/exerciciocostas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="243dp"
        android:layout_marginStart="344dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
