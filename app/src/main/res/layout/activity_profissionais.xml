<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Faixa superior -->
    <View
        android:id="@+id/viewColorProfissionais"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/id_voltarInicio"
        android:layout_width="60dp"
        android:layout_height="47dp"
        android:background="@null"
        android:src="@drawable/botao_voltar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewColorProfissionais" />

    <!-- Título -->
    <TextView
        android:id="@+id/id_profissionais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Contatos de profissionais"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/viewColorProfissionais"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Nutricionista -->
    <TextView
        android:id="@+id/id_nutricionista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:text="Nutricionista:"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/viewColorProfissionais"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_numeroNutri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="11 99023-1322"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/id_nutricionista"
        app:layout_constraintStart_toEndOf="@id/id_nutricionista" />

    <!-- Personal -->
    <TextView
        android:id="@+id/id_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:text="Personal trainer:"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/id_nutricionista"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_numeroPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="11 99000-1222"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/id_personal"
        app:layout_constraintStart_toEndOf="@id/id_personal" />

    <!-- Fisioterapeuta -->
    <TextView
        android:id="@+id/id_fisioterapeuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:text="Fisioterapeuta:"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/id_personal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_numeroFisio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="21 99663-1322"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/id_fisioterapeuta"
        app:layout_constraintStart_toEndOf="@id/id_fisioterapeuta" />

    <!-- Psicólogo -->
    <TextView
        android:id="@+id/id_psicologo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:text="Psicólogo:"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/id_fisioterapeuta"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_numeroPsico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="12 99021-1555"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/id_psicologo"
        app:layout_constraintStart_toEndOf="@id/id_psicologo" />

    <!-- Terapeuta -->
    <TextView
        android:id="@+id/id_terapeuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:text="Terapeuta:"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/id_psicologo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_numeroTerapeuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="11 99212-7984"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/id_terapeuta"
        app:layout_constraintStart_toEndOf="@id/id_terapeuta" />

    <!-- Recomendações -->

    <!-- Imagem -->
    <TextView
        android:id="@+id/id_recomendacaoInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:padding="16dp"
        android:text="Caso precise de ajuda com alguma situação, entre em contato com nossos profissionais altamente qualificados."
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/id_terapeuta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/iconApp"
        android:layout_width="260dp"
        android:layout_height="210dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/id_recomendacaoInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/core_clean" />

</androidx.constraintlayout.widget.ConstraintLayout>
