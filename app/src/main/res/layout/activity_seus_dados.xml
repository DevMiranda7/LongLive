<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Faixa superior -->
    <View
        android:id="@+id/topSeusDados"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/id_seusDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seus dados"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintTop_toTopOf="@id/topSeusDados"
        app:layout_constraintBottom_toBottomOf="@id/topSeusDados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ID -->
    <TextView
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/topSeusDados"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/idDoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toTopOf="@id/idText"
        app:layout_constraintStart_toEndOf="@id/idText" />

    <!-- Peso -->
    <TextView
        android:id="@+id/id_pesoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso:"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/idText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_pesoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88kg"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toTopOf="@id/id_pesoText"
        app:layout_constraintStart_toEndOf="@id/id_pesoText" />

    <!-- Altura -->
    <TextView
        android:id="@+id/id_alturaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura:"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/id_pesoText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_alturaUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.79"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toTopOf="@id/id_alturaText"
        app:layout_constraintStart_toEndOf="@id/id_alturaText" />

    <!-- Email -->
    <TextView
        android:id="@+id/id_emailUsuarioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/id_alturaText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_emailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marcosfelipe@gmail.com"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toTopOf="@id/id_emailUsuarioText"
        app:layout_constraintStart_toEndOf="@id/id_emailUsuarioText" />

    <!-- Gênero -->
    <TextView
        android:id="@+id/id_generoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gênero:"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/id_emailUsuarioText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_generoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masculino"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toTopOf="@id/id_generoText"
        app:layout_constraintStart_toEndOf="@id/id_generoText" />

    <!-- IMC -->
    <TextView
        android:id="@+id/id_seuImcText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMC:"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/id_generoText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_seuImcUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALTO"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toTopOf="@id/id_seuImcText"
        app:layout_constraintStart_toEndOf="@id/id_seuImcText" />

    <!-- Recomendações -->
    <TextView
        android:id="@+id/id_recomedacaoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="De acordo com seu IMC, você deve realizar uma dieta. Consulte a aba de contatos de profissionais recomendados pelo Long Live."
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toBottomOf="@id/id_seuImcText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagem -->
    <ImageView
        android:id="@+id/iconApp"
        android:layout_width="260dp"
        android:layout_height="210dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="1.25"
        app:layout_constraintTop_toBottomOf="@id/id_recomedacaoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/core_clean" />

</androidx.constraintlayout.widget.ConstraintLayout>
